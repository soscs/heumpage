<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/pages/">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
    	<pattern>*json*</pattern>
    	<pattern>*ajax*</pattern>
    </excludes>
    <decorator name="MainLayout" page="decorator/mainLayout.jsp">
       	<pattern>/main</pattern>
    </decorator>
    <decorator name="LoginLayout" page="decorator/loginLayout.jsp">
       	<pattern>/login</pattern>
    </decorator>
    <decorator name="SubLayout" page="decorator/subLayout.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>
